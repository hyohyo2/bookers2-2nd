<div class="container px-5 px-sm-0 mt-3">
 <div class="row">
    <div class="col-md-3">
      <!--ユーザ情報-->
      <%= render 'users/info', user: @user %>
      <!--投稿フォーム-->
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render "books/index", books: @books %>
    </div>
  </div>
  <!--検索フォーム-->
  <div class="row justify-content-center my-3">
    <div class="col-auto">
      <!--フォーム-->
      <%= form_with url: user_search_date_path(@user), method: :get, local: false do |f| %>
        <div class="input-group">
          <%= f.date_field :created_at, class: "form-control" %>
          <div class="input-group-append">
            <%= f.submit "検索", class: "btn btn-info" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div id="search_result">
    <% if @search_book.present? %>
      <%= render 'users/search', search_book: @search_book %>
    <% end %>
  </div>
</div>