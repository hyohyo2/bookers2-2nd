<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 pc-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render 'layouts/errors', obj: @user %>
        <%= form_with model: @user do |f|  %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control name', placeholder: "" %>
        </div>
        <div class="form-group">
          <%= f.label :Image %><br>
          <%= f.file_field :profile_image, placeholder: "form-control user_image", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, class: 'form-control introduction', placeholder: "" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>