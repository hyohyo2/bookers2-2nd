<div class="container px-5 px-sm-0 mt-3">
 <div class="row">
    <div class="col-md-3">
      
      <!--ユーザ情報-->
      <%= render 'users/info', user: @user %>
      <!--投稿フォーム-->
      <%= render 'books/form', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <!--いいね機能の表示設定-->
            <td>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorite_path(@book), class: "text-danger", method: :delete do %>
                  <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorite_path(@book), method: :post do %>
                  <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <!--コメント数の表示設定-->
            <td>
              <%= render 'book_comments/count', book: @book %>
            </td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to edit_book_path(@book), class: "btn btn-sm btn-success" do %>
                  Edit
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" do %>
                  Destroy
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <!--コメント一覧表示-->
      <%= render 'book_comments/index', book: @book, user: @user %>
      <!--コメント投稿フォーム-->
      <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>
