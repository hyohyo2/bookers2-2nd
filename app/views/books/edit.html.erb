<!--Book編集ページ-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 pc-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'layouts/errors', obj: @book %>
      <%= form_with model: @book do |f|  %>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control book_title', placeholder: "" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body, class: 'form-control book_body', placeholder:"" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      <!--show→Book詳細ページへ、Back→Book一覧ページへ-->
      <div>
        <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
        
    </div>
  </div>
</div>